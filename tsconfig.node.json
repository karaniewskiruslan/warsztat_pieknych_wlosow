{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023", "DOM", "ESNext", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "rootDir": "./src",

    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@api/*": ["./@api/*"],
      "@constants/*": ["./@constants/*"],
      "@context/*": ["./@context/*"],
      "@hooks/*": ["./@hooks/*"],
      "@models/*": ["./@types/*"],
      "@languages/*": ["./@languages/*"],
      "@ui/*": ["./@ui/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src", "vite.config.ts", "test/setupTests.ts"]
}
